<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Text-->
    <style name="Text">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="Text.H1">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Text.H3">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.H4">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.H4.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.H4.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H5">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.H5.Light">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.H5.Dark">
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="Text.H5.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.H5.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H6">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.H6.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.H6.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <!--EditText-->
    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorOnSurface">@color/grey_dark</item>
        <item name="boxStrokeColor">@color/grey_dark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="startIconTint">@color/black</item>
        <item name="hintEnabled">false</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="errorTextColor">@color/black</item>
        <item name="errorIconTint">@color/black</item>
    </style>

    <style name="SearchInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorOnSurfaceVariant">@color/grey_dark</item>
        <item name="colorOutline">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="startIconTint">@color/black</item>
        <item name="hintEnabled">false</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="errorTextColor">@color/black</item>
        <item name="errorIconTint">@color/black</item>
        <item name="borderWidth">1dp</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
    </style>

    <style name="TextInputLayoutMultiline" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="startIconTint">@color/black</item>
        <item name="hintEnabled">true</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="errorTextColor">@color/black</item>
        <item name="errorIconTint">@color/black</item>
    </style>

    <style name="TextAppearance.Hint" parent="TextAppearance.Design.Hint">
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">50</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextInputMultilineEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">50</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <!--Buttons -->
    <style name="ButtonRounded" parent="Widget.Material3.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAppearance">@style/Text.H5.White</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
    </style>

    <style name="TransparentButton">
        <item name="android:textAppearanceButton">@style/Text.H5.Light</item>
        <item name="android:textColor">@color/grey</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TransparentButton.Light" parent="TransparentButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRounded.Dark" parent="ButtonRounded">
        <item name="android:backgroundTint">@color/grey_dark</item>
    </style>
    <!--Bottom nav -->
    <style name="Theme.BottomNavBar" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="colorSecondaryContainer">@color/primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircularProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/primary</item>
    </style>
</resources>