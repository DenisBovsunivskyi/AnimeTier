<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeListFragment">
    <activity
        android:id="@+id/mainActivity"
        android:name="com.denisbovsunivskyi.animetier.presentation.ui.MainActivity"
        android:label="mainActivity"
        tools:layout="@layout/activity_main" />
    <action
        android:id="@+id/action_global_auth"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_home_list"
        app:destination="@id/homeListFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.denisbovsunivskyi.animetier.presentation.ui.fragments.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:enterAnim="@anim/slide_in_anim"
            app:popExitAnim="@anim/slide_out_anim" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeListFragment"
            app:enterAnim="@anim/slide_in_anim"
            app:popExitAnim="@anim/slide_out_anim"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.denisbovsunivskyi.animetier.presentation.ui.fragments.auth.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_registrationProfileInfoFragment"
            app:destination="@id/registrationProfileInfoFragment"
            app:enterAnim="@anim/slide_in_anim"
            app:popExitAnim="@anim/slide_out_anim" />
    </fragment>
    <fragment
        android:id="@+id/homeListFragment"
        android:name="com.denisbovsunivskyi.animetier.presentation.ui.fragments.HomeFragment"
        android:label="fragment_home_list"
        tools:layout="@layout/fragment_home" >
    </fragment>
    <fragment
        android:id="@+id/registrationProfileInfoFragment"
        android:name="com.denisbovsunivskyi.animetier.presentation.ui.fragments.auth.RegistrationProfileInfoFragment"
        android:label="fragment_registration_profile_info"
        tools:layout="@layout/fragment_registration_profile_info" >
        <action
            android:id="@+id/action_registrationProfileInfoFragment_to_homeList"
            app:destination="@id/homeListFragment"
            app:enterAnim="@anim/slide_in_anim"
            app:popExitAnim="@anim/slide_out_anim"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.denisbovsunivskyi.animetier.presentation.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.denisbovsunivskyi.animetier.presentation.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>