<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.denisbovsunivskyi.animetier.data.models.anime.tranding.AnimeDto" />


    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="140dp"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:alpha="0.9"
                android:src="@drawable/ic_test_image_for_recycler_horizontal"
                app:setHorizontalAnimeImage="@{model.attributes.posterImage.original}" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:textAppearance="@style/Text.H6.White.Bold"
                android:text="@{@string/text_episodes(model.attributes.episodeCount)}"
                android:textColor="@color/white"
                tools:text="Episodes:5"
                android:padding="10dp"
                android:shadowRadius="20"
                android:shadowColor="@color/black"
                app:gone="@{model.attributes.episodeCount != null}"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:text="@{model.attributes.titles.en != null ? model.attributes.titles.en : model.attributes.titles.enJp }"
            android:textAppearance="@style/Text.H4"
            app:layout_constraintStart_toStartOf="parent"
            tools:text ="Cowboy beebob"
            app:layout_constraintTop_toBottomOf="@id/image" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
