<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.denisbovsunivskyi.animetier.presentation.model.anime.AnimeListUi" />


    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/horizontal_list_item"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            app:cardCornerRadius="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="140dp"
                android:layout_height="190dp"
                android:alpha="0.9"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_test_image_for_recycler_horizontal"
                app:setHorizontalAnimeImage="@{model.posterImage}" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:padding="10dp"
                android:shadowColor="@color/black"
                android:shadowRadius="20"
                android:text="@{@string/text_episodes(model.episodesCount)}"
                android:textAppearance="@style/Text.H6.White.Bold"
                android:textColor="@color/white"
                android:visibility="gone"
                app:gone="@{model.episodesCount != null}"
                tools:text="Episodes:5" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:text="@{model.titles.en != null ? model.titles.en : model.titles.enJp }"
            android:textAppearance="@style/Text.H4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image"
            tools:text="Cowboy beebob dasdasdas a" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
